<div class="container">
  <div class="zz-signup-content">
    <h2 class="sign-up-header-title">Join with Jobfinder</h2>
    <span style="font-size: 15px;">Create your awesome profile and connect to employ</span>
    <div class="zz-steps-signup">
      <div class="left-step-menu">
        <div class="step-one">
          <div class="step-icon step-active">
              <i class="fa fa-user-circle-o fa-2x" aria-hidden="true"></i>
          </div>
          <div class="step-one-content">
            <div class="step-status">
              Step 1
            </div>
            <div class="step-title">
              Setup your personal account
            </div>
          </div>
        </div>
        <div class="step-two">
          <div class="step-icon">
            <span>
              <i class="fa fa-paper-plane-o fa-2x" aria-hidden="true"></i>
            </span>
          </div>
          <div class="step-two-content">
            <div class="step-status">
              Step2
            </div>
            <div class="step-title">
              Choose your plan
            </div>
          </div>
        </div>
        <div class="step-three">
          <div class="step-icon">
            <span>
              <i class="fa fa-terminal fa-2x" aria-hidden="true"></i>
            </span>
          </div>
          <div class="step-three-content">
            <div class="step-status">
              Step 3
            </div>
            <div class="step-title">
              Tell us your experience
            </div>
          </div>
        </div>
      </div>
      <div class="right-step-menu">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="m--step-one">
            <h2>Setup your personal account</h2>
            <%= devise_error_messages! %>
            <div class="field">
              <%= f.label :username %><br />
              <%= f.text_field :username, autofocus: true, class: 'form-control' %>
              <span>This will be your username.</span>
            </div>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, class: 'form-control' %>
              <span >We'll occasionally send updates about your account to this inbox. We'll never share your email address with anyone.</span>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
              <span>Use at least one lowercase letter, one numeral, and seven characters.</span>
            </div>
            <div class="continue-signup">
              <a href="#step-two">Continue</a>
            </div>
          </div>
          <script type="text/javascript">
            $(".continue-signup a").click(function(e){
              e.preventDefault();
              $('.step-one-content .step-status').text('Completed');
              $('.step-one .step-icon .fa').removeClass('fa-user-circle-o');
              $('.step-one .step-icon .fa').addClass('fa-check');
              $('.step-one .step-icon').removeClass('step-active');
              $('.step-one .step-icon').addClass('step-completed');
              $('.step-two .step-icon').addClass('step-active');
              $('.m--step-one').hide();
              $('.m--step-two').show();
            });

            $('.continue-signup').click(function(){
              $('.step-one-content .step-status').text('Completed');
              $('.step-one .step-icon .fa').removeClass('fa-user-circle-o');
              $('.step-one .step-icon .fa').addClass('fa-check');
              $('.step-one .step-icon').removeClass('step-active');
              $('.step-one .step-icon').addClass('step-completed');
              $('.step-two .step-icon').addClass('step-active');
              $('.m--step-one').hide();
              $('.m--step-two').show();
            });
          </script>
          <div class="m--step-two">
            <h2>Choose your plan</h2>
            <div>
              <div class="radio-choice">
                <input type="radio" id="contactChoice1" name="contact" value="email" checked="checked">
                <label for="contactChoice1">Employ seek jobs</label>  
              </div>
              <div class="radio-choice">
                 <input type="radio" id="contactChoice2" name="contact" value="phone">
                <label for="contactChoice2">Company create recruiment</label>
              </div>              
            </div>
            <div class="radio-choice send-mails-jobfinder" style="margin: 30px 0;border-top: 1px solid;">
              <input type="checkbox" name="subcribe_jobfinder" value="subcribe_jobfinder">
              <label style="font-weight: bold;">
                Send me update from Jobfinder News
              </label> 
              <br>
              <span style="margin-left: 32px;">Unsubcribe anytime in your email preferences</span>
            </div>
            <div class="continue-signup">
              <a href="#step-two">Continue</a>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "Create an account" %>
          </div>
        <% end %>
      </div>
    </div>
    

  </div>
</div>
