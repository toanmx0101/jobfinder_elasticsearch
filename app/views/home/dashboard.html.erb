<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="m--recruitment-content">
    <div class="recruitments">
      <div class="recruitment">
        <div class="new-recruitment">
           <div class="m--new-recruitment">
              <a href="/new_recruitment">
                 <span class="span-new-recruitment">New recuitment</span>
              </a>
           </div>
        </div>
      </div>
    </div>
    <div class="recruitments">
      <% 4.times do %>
        <div class="recruitment">
          <div class="m--recruitment">
            <div class="recruitment-title">
                <h3>Senior PHP </h3>
                <span>Arpl 13</span>
            </div>
            <div class="job-require-skills-list">
              <span>PHP</span>
              <span>ASW</span>
              <span>HTML, CSS</span>
            </div>
            <div class="candidates">
              <div class="candidate">
                <img src="/images/avatar-test-1.jpg">
              </div>
              <div class="candidate">
                <img src="/images/avatar-test-2.jpg">
              </div>
              <div class="candidate">
                <img src="/images/avatar_test_3.jpg">
              </div>
              <div class="candidate">
                <span></span>
              </div>
            </div>
            <div class="recruitment-infor" style="color: #8FD5FE;width: calc(100% - 24px);">
              <div style="float: right;">
                <span>
                  <i class="fa fa-cog fa-lg" aria-hidden="true"></i>
                </span>
              </div>
              <div style="float: right;">
                <span>
                  <i class="fa fa-map-marker fa-lg" aria-hidden="true"></i>
                </span>
              </div>
              <div style="float: right;">
                <span>
                   <i class="fa fa-bookmark-o fa-lg" aria-hidden="true"></i>
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end  %>
    </div>
  </div>
</div>