<%= render "dashboard_left_menu", page: "recruitments" %>
<div class="right-container">
  <div class="m--recruitment-content ">
    <%= render "recruitments", jobs: @jobs %>
  </div>
</div>
<script type="text/javascript">
  $(document).mouseup(function (e){
    var container = new Array();
    container.push($('.filter'));
    
    $.each(container, function(key, value) {
      if (!$(value).is(e.target) // if the target of the click isn't the container...
        && $(value).has(e.target).length === 0) // ... nor a descendant of the container
      {
        $('.active-filter').removeClass('active-filter');
      }
    });
  }); 
  $('.table-recruitments').click(function(){
    if ($(this).parent().hasClass('selected') == true) {
      $(this).parent().removeClass('selected');
    } else {
      $('.dashboard-table-recruitments').removeClass('selected');
      $(this).parent().addClass('selected');  
    }
  });
</script>