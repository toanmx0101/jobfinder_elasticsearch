<%= render "dashboard_left_menu", page: "meeting" %>
<div class="right-container">
  <div class="m--recruitment-content ">
    <div class="recruitments">
      <div class="c-appliers-header" style="display: block;">
        <div class="filter-header">
          <div style="margin: auto 0; display: flex;">
            <%= link_to interviews_path do %>
              <h3 style="font-size: 18px;margin: 0; padding: 8px;color: #484848;">Interviews</h3>
            <% end %>
            <i class="fas fa-angle-right" style="font-size: 20px;padding: 7px 0;"></i>
            <h3 style="font-size: 18px;margin: 0; padding: 8px;color: #2890ff;">Create new</h3>
          </div>
        </div>
      </div>
      <div class="c-new-interviews">
        <%= form_with(model: @interview, local: true) do |form| %>
          <div class="c-new-interviews-form">
            <div class="c-n-i-content">
              <div class="title">
                <label>TITLE</label>
                <%= form.text_field :title, id: :title %>
              </div>
              <div class="timepick">
                <div class="title" style="position: relative;">
                  <label>DAY</label>
                  <%= form.text_field :day, id: :day %>
                </div>
                <script>
                  $( function() {
                    var date = new Date();
                    date.setDate(date.getDate()-1);
                    $( "#day" ).datetimepicker({
                        format: 'MMMM DD, YYYY',
                        defaultDate: new Date(),
                        minDate: date
                    });
                  } );
                </script>
                <div class="Hour">
                  <label>AT HOUR</label>
                  <%= form.text_field :hour, id: :hour, value: Time.now.hour %>
                </div>

                <div class="title">
                  <label>MINUTE</label>
                  <%= form.text_field :minute, id: :minute, value: Time.now.strftime('%M') %>
                </div>
                <script type="text/javascript">
                  $('#day, #hour, #minute').on('input',function(){
                    $('.interview-time span').text('This inteview will take place on the 13th Novemver 2017 from 10:00am during');
                  });
                </script>
                <div class="title">
                  <label>DURATION</label>
                  <%= form.text_field :duration, id: :duration, value: '1h' %>
                </div>
              </div>
              <div class="interview-time">
                <i class="fas fa-check-square"></i>
                <span>This inteview will take place on the 13th Novemver 2017 from 10:00am until  1:00pm</span>
              </div>
              <div class="title" style="margin-top: 27px">
                <label>LOCATION</label>
                <%= form.text_field :location, id: :location %>
              </div>
              <div class="title" style="margin-top: 27px">
                <label>DESCRIPTION</label>
                <%= form.text_area :description, id: :description ,rows: 4, style: "border-radius: 3px;width: 100%;border: 1px solid #DDD; padding: 6px;box-sizing: border-box;"%>
              </div>
            </div>
          </div>
          <div class="c-n-i-add-interviewer">
            <div class="c-n-i-content">
              <div class="title">
                <label>INTERVIEWER</label>
                <div class="candidate-item">
                  <div class="content">
                    <div class="user-icon">
                      <img src="/images/logo.png">
                    </div>
                    <div class="user-infor">
                      <div class="username">Tung</div>
                      <div>Product Management</div>
                    </div>
                    <%= form.hidden_field :interviewer_id, id: :interviewer_id, value: User.first.id %>
                    <div class="view-profile" style="display: flex;padding: 6px 10px;"><i class="fas fa-check" style="margin-right: 5px;margin-top: 2px;"></i>Mail</div>
                  </div>
                </div>
              </div>
              <div class="title">
                <label>JOB</label>
                <div class="candidate-item">
                  <div class="content">
                    <div class="user-infor">
                      <div class="username">Tung</div>
                      <div>Product Management</div>
                    </div>
                    <%= form.hidden_field :job_id, id: :job_id, value: Job.first.id %>
                  </div>
                </div>
              </div>
              <div class="action-create-inteview">
                <%= form.submit 'Create interview', style: 'background: transparent;border: 0;padding: 0; color: white;font-weight: 600;font-size: 15px;cursor: pointer' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
