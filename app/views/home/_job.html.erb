<div class="dashboard-table-recruitments">
  <div class="table-recruitments grow">
    <%= link_to job,  class: "id" do %>
      <%= job.id %>
    <% end %>
    <div class="title"><%= job.title %></div>
    <div class="views"><%= job.view_count %></div>
    <% des = job.description.nil? ? job.about_candidate.gsub(/<\/?[^>]*>/, "") : job.description.gsub(/<\/?[^>]*>/, "") %>
    <div class="description"><%= des %></div>
    <div class="status"><%= job.state %></div>
    <div class="publish"><%= time_ago_in_words(job.start_at)%> ago</div>
    <div class="end"><%= job.end_at.strftime("%b %e") %></div>
    <div class="setting">
      <%= link_to edit_job_path(job) do %>
        <i class="fas fa-edit"></i>
      <% end %>
    </div>
  </div>
  <div class="short-details">
    <div class="recruiment-short-details">
      <div class="applyers">
        <h3 >Applyers</h3>
        <div class="applyer-list">
          <div class="applyer">
            <% applyers.each do |applyer| %>
              <%= render 'applyer', applyer: applyer %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="candidates">
        <h3 >Candidates</h3>
        <div class="applyer-list">
          <div class="applyer">
            <% candidates = User.all.sample(3) %>
            <% candidates.each do |candidate| %>
              <%= render 'candidate', candidate: candidate %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="basic-infor">
        <h3 >Information</h3>
        <div><i class="fas fa-map-marker-alt"></i><%= job&.location%></div>
        <div style="margin-bottom: 12px;"><i class="fas fa-map-pin"></i><%= job&.job_type%></div>
        <div class="description"><%= truncate(job&.about_candidate.gsub(/<\/?[^>]*>/, ""), length: 350) %></div>
      </div>
      <div >
        
      </div>
      
    </div>
  </div>
</div>

