<div class="base-user-profile" style="padding-top: 120px;">
  <div class="container " >
    <div class="c-base-user-profile">
      <div class="c-image">
        <img src="<%= current_user.avatar_url %>">
      </div>
      <div class="c-text">
        <h2><%= current_user&.username %>   <span>( <%= current_user&.work_position %> )</span></h2>
        <span style="font-size: inherit;font-weight: normal;margin-left: 3px;"">
          <i class="fa fa-map-marker" aria-hidden="true" style="margin-right: 2px;"></i>
          <%= current_user&.location %>
        </span>
        <span style="width: 82px;display: block;margin-top: 19px;padding-bottom: 3px;margin-bottom: 4px;">About</span>
        <span style="width: 63%;display: block;font-size: inherit;font-weight: normal;">
          <%= raw current_user&.description %>
        </span>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(window).bind('scroll', function () {
    if ($(window).scrollTop() >  280) {
      $('#userProfileNavigation').addClass('nav-fixed');
    } else {
      $('#userProfileNavigation').removeClass('nav-fixed');
    }
  });
</script>

<div class="container">
    <div class="details-user-profile user-profile-navigation" id="userProfileNavigation">
      <a href="/profile" class="u-p-n-items ">
        <div class="u-p-n-item-link" id="firstLink">
          About
        </div>
      </a>
      <a href="/conversations" class="u-p-n-items ">
        <div class="u-p-n-item-link">
          Messages
        </div>
      </a>
      <a href="/my_interviews" class="u-p-n-items ">
        <div class="u-p-n-item-link">
          Interviews
        </div>
      </a>
      <a href="/appropriate_jobs" class="u-p-n-items selected">
        <div class="u-p-n-item-link">
          Suggest jobs
        </div>
      </a>
      <a href="/setting"  class="u-p-n-items">
        <div class="u-p-n-item-link">
          Settings
        </div>
      </a>
    </div>
    <div class="container">
      <div class="" style="padding-top: 20px;">
        <div style="box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.3); margin:  4px;margin-bottom: 20px;border-radius: 6px;background: linear-gradient(#3bdf61, #52dd8f);display:  flex;">
            <img src="images/gift.png" style="height: 51px;padding: 30px;">
            <div style="width: 100%;"">
                <div style="padding-bottom: 12px;color: white;padding: 20px;padding-bottom: 12px;font-weight: 800;padding-left: 0;font-size: 21px;">A GIFT</div>
                <div style="color:  white;font-size: 17px;font-weight: 600;">Base on your profile,
                    <br>
                    We found 10 jobs  that you   maybe interested in.
                </div>
            </div>
        </div>
        <div class="jobs-list appropricate-jobs-list">
          <% @appropricate_jobs.each do |job| %>
            <%= render '/jobs/job', job: job, score: @jobs_score.detect{ |e| e[:job_id] == job.id.to_s }[:job_score].round(2) %>
          <% end %>
        </div>
      </div>
</div>
</div>
<%= render "/partials/footer"%>


<script type="text/javascript">
  $('.setting').click(function(){
    $('.setting').removeClass('is-active');
    $(this).addClass('is-active');
  });
</script>


