<%= render "dashboard_left_menu", page: "applyers" %>
<div class="right-container">
  <div class="m--recruitment-content ">
    <div class="recruitments">
      <div class="c-appliers-header" style="margin-bottom: 26px;display: block;">
        <div class="filter-header">
          <div style="margin: auto 0;">
            <h3 style="font-size: 18px;margin: 0; padding: 8px;">Appliers</h3>
          </div>
          <div class="filter-appliers">
            <div class="fitler">
              <div class="all selected" style="padding: 6px 18px; ">All</div>
              <div style="border-left: 1px solid #D4D4D9;border-radius: 3px 0 0 3px">Meeting Scheduled</div>
              <div>Passed</div>
              <div>No Schedule</div>
              <div style="border-radius: 0 3px 3px 0">Failed</div>
            </div>
          </div>
        </div>
      </div>
      
      <% @applies.each_slice(4) do |f_apply| %>
        <div class="c-appliers">
          <% f_apply.each do |apply| %>
              <div class="applier">
                <div class="applier-info">
                  <%= link_to jf_path(apply.applyer), class: "user-avatar" do %>
                    <img src="<%= apply.applyer.avatar_url %>">
                  <% end %>
                  <div class="user">
                    <%= link_to jf_path(apply.applyer), class: "user-name" do %>
                      <strong><%= apply.applyer.username %></strong>
                    <% end %>
                    <div class=email><%= apply.applyer.email %></div> 
                    <div class="applier-actions">
                      Interview at: <strong style="color: #5897fbb8;">Jun 24 10:24 AM</strong>
                    </div>
                  </div>
                </div>

                <div class="job">
                  <%= link_to apply.job, class: "title" do %>
                    <strong><%= apply.job.title %></strong>
                  <% end %>
                  <div class="orther-applyer">
                    <div class="applyer-list">
                      <div class="user-avatar">
                        <img src="images/logo.png">
                      </div>
                      <div class="user-avatar">
                        <img src="images/logo.png">
                      </div>
                      <div class="user-avatar">
                        <img src="images/logo.png">
                      </div>
                      <div class="user-avatar">
                        <img src="images/logo.png">
                      </div>
                      <div style="display: inline-block;margin: auto;color: #5897fbb8">4 more appliers</div>
                    </div>
                  </div>
                </div>
                <div class="view-details">
                  <strong>View Details</strong>
                </div>
              </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>