                <%= form.text_field :type, id: :job_job_type, placeholder: 'Hourly, Fulltime, Parttime, Remote?'%>
              </div>
            </div>
          </div>
          <div class="right-form-group">
            <div class="c--right-form-group">
              <div class="x1--form-create-recruitment"> 
                <h3 class="h3-heading">Payrate *</h3>
                <%= form.text_field :pay_rate, id: :job_payrate, placeholder: 'Payrate for work'%>
              </div>
            </div>
          </div>  
        </div>
        <div class="advance-setting">
          <div class="c-content">
            <h3 class="h3-heading">Advance setting</h3>
          </div>
        </div>
        <div class="header-job-create"></div>
        <div class="form-job-submit">
          <span class="submit"><%= form.submit %></span>
          <span class="cancel">Cancel</span>
        </div>
      </div>
    </div>
    <div class="st-right-content">
      <div id="xxx" class="x-st-right-content">
        <div class="" style="padding: 15px 0; display: flex;">
          <span class="preview-job ac-job" style="width: 30%;display: inline-block;margin-right: 6px;">Post this job</span>
          <span class="preview-job ac-job" style="width: 30%;display: inline-block;margin-right: 6px;"><i class="fa fa-eye fa-lg" style="color: #f8bc48;"></i> Preview</span>
          <span class="preview-job ac-job" style="width: 30%;text-align: center;c">More</span>
        </div>
        <div class="fill-company-informantion"> 
