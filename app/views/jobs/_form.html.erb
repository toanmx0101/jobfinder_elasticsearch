
<script type="text/javascript">
  $(window).bind('scroll', function () {
    if ($(window).scrollTop() > 90) {
        $('#xxx').addClass('fixed');
    } else {
        $('#xxx').removeClass('fixed');
    }
});
</script>
<style type="text/css">
  .fixed {
    position: fixed;
    width: 323px;
    top: 70px;
  }
</style>
<%= form_with(model: job, local: true) do |form| %>
