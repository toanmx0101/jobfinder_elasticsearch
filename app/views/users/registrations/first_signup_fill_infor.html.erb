<div class="container">
  <div class="zz-signup-content">
    <h2 class="sign-up-header-title">Join with Jobfinder</h2>
    <span style="font-size: 15px;">Create your awesome profile and connect to employ</span>
    <div class="zz-steps-signup">
      <div class="left-step-menu">
        <div class="step-one">
          <div class="step-icon step-completed">
              <i class="fa fa-check fa-2x" aria-hidden="true"></i>
          </div>
          <div class="c-step-content">
            <div class="step-status">Completed</div>
            <div class="step-title">Setup your personal account</div>
          </div>
        </div>
        <div class="step-two">
          <div class="step-icon step-completed">
            <span>
              <i class="fa fa-check fa-2x" aria-hidden="true"></i>
            </span>
          </div>
          <div class="c-step-content">
            <div class="step-status">
              Completed
            </div>
            <div class="step-title">
              Choose your plan
            </div>
          </div>
        </div>
        <div class="step-three">
          <div class="step-icon step-active">
            <span>
              <i class="fa fa-terminal fa-2x" aria-hidden="true"></i>
            </span>
          </div>
          <div class="c-step-content">
            <div class="step-status">
              Step 3
            </div>
            <div class="step-title">
              Tell us your experience
            </div>
          </div>
        </div>
      </div>
      <div class="right-step-menu">
        <%= form_for(current_user, as: resource_name, url: registration_path(:user), html: { method: :put, style: 'width: 100%;'} ) do |f| %>
          <h2>Tell us your experience</h2>
          <div class="m--step-three" style="display: flex">
            <div class="" style=";margin-right: 15px;width: 100%">
              <div class="field">
                <%= f.label "Your Position"%><br />
                <%= f.text_field :work_position, class: 'form-control' %>
              </div>
              <div class="field">
                <%= f.label "About you" %><br />
                <%= f.text_area :description, class: 'form-control', id: 'description', rows: '4' %>
              </div>
              <div class="field">
                <%= f.label "Your Past Experiences" %><br />
                <%= f.text_area :experience, class: 'form-control', id: 'experience',  rows: '4' %>
              </div>
              <div class="field">

                <%= f.label "Linkedin ( optional )"%><br />
                <%= f.text_field :website, class: 'form-control' %>
              </div>
              <div class="field">
                <%= f.label "Education"%><br />
                <%= f.text_area :education, class: 'form-control', id: 'education' %>
              </div>
              <div class="field">
                <%= f.label "Your language"%><br />
                <%= f.text_field :language, class: 'form-control' %>
              </div>
              <div class="actions">
                <%= f.submit "Continue", style: 'cursor: pointer' %>
              </div>
            </div>
            <div class="" style=";margin-left: 15px;">
            <style type="text/css">
              .ck-editor__editable {
                  min-height: 200px;
              }
            </style>
            </div>
          </div>  
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  var editor1 = ClassicEditor.create( document.querySelector( '#description' ))
  var editor2 = ClassicEditor.create( document.querySelector( '#experience' ))
  var editor3 = ClassicEditor.create( document.querySelector( '#education' ))
</script>