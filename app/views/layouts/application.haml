!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Searchapp
    = csrf_meta_tags
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'application'
    = javascript_include_tag Ckeditor.cdn_url
  %body
    = render 'partials/header'
    = yield
    = render 'partials/footer', 'data-turbolinks-track': 'true'
    .widget-container 
      .small-chat
        .layout-small-icon
        .layout-expand
          .messenger
            .messenger-header
              %h3 How can we help you?
              .icon-messenger-close
                %i.fa.fa-times.fa-lg
              :javascript
                $('.small-chat').hide()
                $('.icon-messenger-close').click(function(){
                  $('.small-chat').hide()
                });
            .messenger-content
              .messages
              .message-input
                %input{placeholder: 'Send a message'}
                %i.fa.fa-paper-plane-o.fa-lg{"aria-hidden" => "true"}
